<Window x:Class="PomodoroApp.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options" Height="275" Width="250"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" >

            <TextBlock Text="Temps de travail (secondes) :" Margin="0,0,0,5" Height="22"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                <TextBox x:Name="WorkMinutesTextBox" Width="50" Margin="0,0,5,0"/>
                <TextBlock Text="min" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <TextBox x:Name="WorkSecondsTextBox" Width="50" Margin="0,0,5,0"/>
                <TextBlock Text="sec" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock Text="Temps de repos (secondes) :" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                <TextBox x:Name="RestMinutesTextBox" Width="50" Margin="0,0,5,0"/>
                <TextBlock Text="min" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <TextBox x:Name="RestSecondsTextBox" Width="50" Margin="0,0,5,0"/>
                <TextBlock Text="sec" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock Text="Notification audio :" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="AudioPathTextBox" Width="140" IsReadOnly="True"/>
                <Button Content="..." Width="60" Margin="5,0,0,0" Click="ChoisirAudio_Click"/>
            </StackPanel>

            <Button Content="Valider" Width="100" HorizontalAlignment="Center" Margin="0,25,0,10" Click="Valider_Click"/>
        </StackPanel>
    </Grid>
</Window>
