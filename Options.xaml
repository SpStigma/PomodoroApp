<Window x:Class="PomodoroApp.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options" Height="250" Width="250"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" >
            
            <TextBlock Text="Temps de travail (secondes) :" Margin="0,0,0,5"/>
            <TextBox Name="WorkTimeTextBox" Width="180" Margin="0,5,0,10" HorizontalAlignment="Left"/>

            <TextBlock Text="Temps de repos (secondes) :" Margin="0,0,0,5"/>
            <TextBox x:Name="RestTimeTextBox" Width="180" Margin="0,5,0,10" HorizontalAlignment="Left"/>

            <TextBlock Text="Notification audio :" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="AudioPathTextBox" Width="140" IsReadOnly="True"/>
                <Button Content="..." Width="60" Margin="5,0,0,0" Click="ChoisirAudio_Click"/>
            </StackPanel>

            <Button Content="Valider" Width="100" HorizontalAlignment="Center" Margin="0,25,0,0" Click="Valider_Click"/>
        </StackPanel>
    </Grid>
</Window>
