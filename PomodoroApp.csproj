		<Nullable>disable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<UseWPF>true</UseWPF>
		<UseWindowsForms>true</UseWindowsForms>
	</PropertyGroup>

	<ItemGroup>
		<None Remove="Sounds\notif.mp3" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="bin\Debug\net8.0-windows\Icon\pomodoro.ico" />
