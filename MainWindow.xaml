<Window x:Class="PomodoroApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		ShowInTaskbar="False"
        Title="Pomodoro" Height="350" Width="350"
        ResizeMode="CanResize" WindowStartupLocation="CenterScreen">

	<Grid>
		<!-- Cadran circulaire -->
		<Ellipse Width="150" Height="150"
                 Stroke="Black" StrokeThickness="3"
                 HorizontalAlignment="Center" VerticalAlignment="Center"/>

		<!-- Aiguille -->
		<Line x:Name="ClockHand"
              X1="0" Y1="0" X2="0" Y2="-60"
              Stroke="Red" StrokeThickness="2"
              StrokeEndLineCap="Round"
              HorizontalAlignment="Center" VerticalAlignment="Center">
			<Line.RenderTransform>
				<RotateTransform x:Name="HandRotation" Angle="0"/>
			</Line.RenderTransform>
		</Line>

		<!-- Timer texte -->
		<Label x:Name="frontTimer"
               Content=""
               FontSize="24"
		       HorizontalAlignment="Center"
               VerticalAlignment="Bottom"
               Margin="0,0,0,40"/>

		<!-- Bouton Start/Pause -->
		<Button x:Name="StartPauseButton"
                Content="Start"
                Width="100" Height="30"
			    HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,10"
                Click="StartClick"/>
	</Grid>
</Window>
