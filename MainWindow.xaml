<Window x:Class="PomodoroApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PomodoroApp"
        mc:Ignorable="d"
        Title="Pomodoro" Height="300" Width="500"
        ResizeMode="NoResize">
    <Grid>
        <Label x:Name="frontTimer" Content="" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="StartPauseButton" Content="Start" Width="100" Height="25" Click="StartClick" Margin="0,175,0,0"/>
    </Grid>
</Window>
